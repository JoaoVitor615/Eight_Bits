<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eightbits">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:forceDarkAllowed="false"
        android:icon="@mipmap/ic_launcher"
        android:label="Eight Bits"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EightBits">

        <activity android:name=".Razer"
            android:screenOrientation="portrait"/>
        <activity android:name=".Tela_Headset"
            android:screenOrientation="portrait"/>
        <activity android:name=".Tela_Mouse"
            android:screenOrientation="portrait"/>
        <activity android:name=".Tela_Teclado"
            android:screenOrientation="portrait"/>
        <activity android:name=".Tela_Monitor"
            android:screenOrientation="portrait"/>
        <activity android:name=".Tela_Ofertas"
            android:screenOrientation="portrait"/>
        <activity android:name=".WebViewActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="google.com"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity android:name=".activity_cat"
            android:screenOrientation="portrait"/>
        <activity android:name=".Informacoes"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>